@model FoodFit.Models.Users;

@{
    ViewData["Title"] = "";
}


<div class="form">

    <ul class="tab-group">
        <li class="tab active"><a href="#signup">Регистрация</a></li>
        <li class="tab"><a href="#login">Войти</a></li>
    </ul>

    <div class="tab-content">


        <div id="signup">
            <h1>Приветствую!</h1>

            <form asp-controller="Home" asp-action="Registration" method="post">

                <div style="flex-direction: row">
                    <div style="">
                        <div class="field-wrap">
                            <label>
                                Имя<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off" asp-for="Name" />
                        </div>

                        <div class="field-wrap">
                            <label>
                                Фамилия<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off" asp-for="Surname" />
                        </div>

                        <div class="field-wrap">
                            <label>
                                Отчество<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off" asp-for="Patronymic" />
                        </div>
                    </div>

                    <div style="">
                        <div class="field-wrap">
                            <label>
                                Электронная почта<span class="req">*</span>
                            </label>
                            <input type="email" required autocomplete="off" asp-for="Email" />
                        </div>

                        <div class="field-wrap">
                            <label>
                                Пароль<span class="req">*</span>
                            </label>
                            <input type="password" required autocomplete="off" asp-for="Password" />
                        </div>
                        @if (ViewData["ValidateMessage"] != null)
                        {
                            <br />
                            <br />
                            <label>@ViewData["ValidateMessage"]</label>
                        }
                    </div>
                </div>

                <button type="submit" class="button button-block">Зарегистрироваться</button>

            </form>

        </div>

        <div id="login">
            <h1>С возвращением!</h1>

            <form asp-controller="Home" asp-action="Login" method="post">

                <div class="field-wrap">
                    <label>
                        Электронная почта<span class="req">*</span>
                    </label>
                    <input type="email" required autocomplete="off" asp-for="Email"/>
                </div>

                <div class="field-wrap">
                    <label>
                        Пароль<span class="req">*</span>
                    </label>
                    <input type="password" required autocomplete="off" asp-for="Password"/>
                </div>

                <button class="button button-block">Войти</button>

            </form>

        </div>

        

    </div>

</div>