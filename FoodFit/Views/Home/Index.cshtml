@{
    ViewData["Title"] = "Главная страница";
}
@if (ViewBag.AlertMessage != null)
{
    <script>
        alert('@ViewBag.AlertMessage');
    </script>
}

<div class="homepage">
    <div id="hptxtf" style="width: 69%;">
        <p style="font-size: 400%; color: #BC6C25; font-weight: 900">
            FoodFit сайт здорового питания и фитнеса
        </p>
        <p id="hptxts" style="font-size: 200%; color: #DDA15E">
            Заботься о себе с нашим сайтом о здоровом питании!
        </p>
        <p id="hpbutton" style="background-color: #283618; text-align: center; border-radius: 10px;">
            <a style="text-decoration: none; color: #FEFAE0; font-size: 250%;" asp-area="" asp-controller="Recipes" asp-action="Index">
                Перейти к рецептам
            </a>
        </p>
    </div>
    
    <div id="hpimgs" >
        <img src="~/Resources/Recipes/firstmeal.jpg" style="padding: 10px; height: 69%; width: 69%;" />
    </div>
</div> 


