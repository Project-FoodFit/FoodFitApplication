<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodFit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodFit.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/Resources/FFlogo.ico" type="image/x-icon">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav flex-grow-1" style="height:auto">
                    <li class="navitem">
                        <a class="navlink" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    <li class="navitem">
                        <a class="navlink" asp-area="" asp-controller="Home" asp-action="Index">Рецепт</a>
                    </li>
                    <li class="navitem">
                        <a class="navlink" asp-area="" asp-controller="Home" asp-action="Index">Фитнес</a>
                    </li>
                    <li class="navitem">
                        <a class="navlink" asp-area="" asp-controller="Home" asp-action="Index">Блог</a>
                    </li>
                    <li class="navitem">
                        <a class="navlink" asp-area="" asp-controller="Home" asp-action="Index">Контакты</a>
                    </li>
                    <li class="navitem">
                        <a class="navlink" asp-area="" asp-controller="Home" asp-action="Index">        </a>
                    </li>
                    <li class="navsearch">
                        @using (Html.BeginForm("Index", "Products", FormMethod.Post))
                        {
                            <input type="text" name="searchBox" id="searchBox" style="width: 120%"/>
                            <input type="submit" name="submitButton" value="submit" style="width: 50%"/>
                        }
                    </li>
                    <li class="navitem">
                        <a class="navlink" asp-area="" asp-controller="Home" asp-action="Index">        </a>
                    </li>
                    <li class="navitem">
                        <a class="navlink" asp-area="" asp-controller="Home" asp-action="Index">Войти</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style=" border: none">
        <div class="footer-text">
            &copy; 2023 - FoodFit - <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Политика Конфиденциальности</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
